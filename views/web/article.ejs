<div class="menu_article">
  <h2 class="title">所有模板</h2>
  <div class="p_head">
    <ul class="p_top">
      <li>全部</li>
      <li>已发布</li>
      <li>草稿</li>
      <li>垃圾箱</li>
    </ul>
    <div class="p_head_search  fr">
      <span class="form-box">
        <input type="text" class="form-control" />
      </span>
      <span class="button btn-default">筛选</span>
    </div>
  </div>
  <div class="p_head">
    <div class="col col-10">
      <select class="form-control" v-model="checkOprFlag">
        <option value="">==批量操作==</option>
        <option value="del">删除</option>
      </select>
    </div>
    <span class="button btn-default" v-gesture:tap="click_btn_opr(this,$event)">应用</span>

    <div class="col col-10">
      <select class="form-control">
        <option>全部专题</option>
      </select>
    </div>
    <div class="col col-10">
      <select class="form-control">
        <option>全部分类</option>
      </select>
    </div>
    <span class="button btn-default">筛选</span>
  </div>
  <br/>
  <table class="table">
    <thead>
    <tr>
      <th class="checkbox"><input name="dataItem" v-on:click="click_btn_checkAll(this,$event)" type="checkbox" v-model="checkAllFlag"></th>
      <th>标题</th>
      <th>作者</th>
      <th>分类</th>
      <th>专题</th>
      <th>发布时间</th>
      <th width="120">操作</th>
    </tr>
    </thead>
    <!--<tr>-->
    <!--<td class="checkbox"><input name="dataItem" onclick="checkAll(this)" type="checkbox" value="0"></td>-->
