    <!--<td>3</td>-->
    <!--<td>4</td>-->
    <!--<td>5</td>-->
    <!--<td>6</td>-->
    <!--</tr>-->
    <tr v-for="one in list" v-on:dblclick="dclick_row(one)">
      <td class="checkbox"><input name="dataItem" type="checkbox" v-model="one.checked" /></td>
      <td>{{one.title}}</td>
      <td>{{one.user_id}}</td>
      <td>{{one.id}}</td>
      <td>{{one.moudle}}</td>
      <td >{{one.createdAt}}</td>
      <td><span class="button btn-primary" v-on:click="click_btn_mobileWeb(one)">预览</span></td>
    </tr>
  </table>
</div>

