%>
<section id="b_menu" class="b-menu">
  <div>
    <br/>
    <div>※</div>
    <br/>
  </div>
  <ul class="sidebar-menu onMenuClick">
    <% menu.forEach(function(one){ %>
    <li class="<%=one.active||'' %>">
      <a href="javascript:void(0);" d-url="<%=one.url %>">
        <i class="fa <%=one.icon %>"></i>
        <span><%=one.text %></span>
