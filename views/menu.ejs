      <ul>
        <% one.children.forEach(function(sub){ %>
        <li>
          <a href="javascript:void(0);" d-url="<%=sub.url %>">
            <i class="fa <%=sub.icon %>"></i>
            <span><%=sub.text %></span>
            <i class="fa"></i>
          </a>
        </li>
        <% }) %>
      </ul>
      <% } %>
    </li>
    <% }) %>
  </ul>
